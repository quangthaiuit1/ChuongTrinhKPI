<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:h="http://java.sun.com/jsf/html" template="/pages/home.xhtml">
	<ui:define name="content">
		<h3 style="margin: 0px">Danh mục nhà sản xuất</h3>
		<p:separator />
		<h:form id="menuformid">
			<h:panelGrid columns="2" style="width:100%;" columnClasses="w40, w60">
				<p:panel header="Thông tin" styleClass="panelw100">
					<p:focus for="code" />
					<h:panelGrid id="info">
						<p:outputLabel value="Mã nhà sản xuất*:" for="code" />
						<p:inputText value="#{producerBean.producer.code}" id="code"
							styleClass="upper" />
						<p:outputLabel value="Tên khách hàng*:" />
						<p:inputText value="#{producerBean.producer.name}"
							styleClass="upper" />
						<p:outputLabel value="Ghi chú:" />
						<p:inputTextarea cols="24" rows="4" styleClass="upper"
							value="#{producerBean.producer.note}" />
					</h:panelGrid>
					<p:separator />
					<p:commandButton value="Lưu/Cập nhật"
						action="#{producerBean.createOrUpdate()}"
						update=":messages,:menuformid" />
					<p:commandButton value="Tạo mới" action="#{producerBean.reset()}"
						update=":menuformid" />
				</p:panel>
				<p:panel header="Danh sách" id="preview">
					<h:panelGrid id="mainGrid" columns="6"
						style="float:left; margin-bottom:5px">
						<p:tooltip for="xoact" value="Xoá form" />
						<p:commandButton icon="ui-icon-trash" id="xoact" process="@this"
							update=":messages,:menuformid" action="#{producerBean.delete()}">
							<p:confirm icon="ui-icon-alert" />
						</p:commandButton>
						<p:commandButton value="Tìm kiếm " id="idorder"
							styleClass="greenbutton" />
					</h:panelGrid>

					<p:overlayPanel id="imagePanel" for="idorder" hideEffect="fade"
						widgetVar="panelsearch">
						<h:panelGrid columns="2" cellpadding="5" style="width:400px">
							<p:inputText style="width: 250px;" styleClass="upper"
								placeholder="Tìm kiếm theo mã, tên,.."
								value="#{producerBean.searchText}" />
						</h:panelGrid>
						<p:separator />
						<p:commandButton value="Tìm" icon="ui-icon-search"
							styleClass="greenbutton" oncomplete="PF('panelsearch').hide()"
							actionListener="#{producerBean.searchItem}" update="tableid" />
					</p:overlayPanel>
					<div style="clear: both" />
					<p:dataTable value="#{producerBean.producers}" lazy="true"
						paginatorPosition="bottom" rowsPerPageTemplate="20,40,60"
						paginator="true" rows="40" rowKey="#{item.id}"
						selection="#{producerBean.producerEdit}" scrollable="true"
						selectionMode="single" scrollWidth="670" id="tableid"
						scrollHeight="370" widgetVar="datatb" resizableColumns="true"
						var="item">
						<p:ajax event="rowSelect" listener="#{producerBean.showEdit()}"
							update=":menuformid" />
						<p:column headerText="ID" style="width:30px">
							<h:outputText value="#{item.id}" />
						</p:column>
						<p:column headerText="Mã NSX" style="width:60px">
							<h:outputText value="#{item.code}" />
						</p:column>
						<p:column headerText="Tên nhà sản xuất" style="width:250px">
							<h:outputText value="#{item.name}" />
						</p:column>
						<p:column headerText="Ghi chú" style="width:200px">
							<h:outputText value="#{item.note}" />
						</p:column>
						<f:facet name="footer">
							<div style="clear: both;" />
						</f:facet>
					</p:dataTable>
				</p:panel>
			</h:panelGrid>
		</h:form>
	</ui:define>
</ui:composition>