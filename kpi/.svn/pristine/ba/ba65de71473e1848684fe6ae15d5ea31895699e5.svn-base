<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:pe="http://primefaces.org/ui/extensions"
	template="/pages/home.xhtml">
	<ui:define name="content">
		<h3 style="margin: 0px">KPI công ty</h3>
		<p:separator />
		<h:form id="menuformid">
			<p:tabView id="tv" widgetVar="myTab"
				activeIndex="#{kPICompBean.tabindex}">
				<p:ajax event="tabChange" process="@this" update=":menuformid" />
				<p:tab title="Danh Sách">
					<h:form id="list">
						<h:panelGrid id="mainGrid" columns="6"
							style="float:left; margin-bottom:5px">
							<p:tooltip for="xoact" value="Xoá phiếu" />
							<p:commandButton icon="fa fa-trash" id="xoact" process="@this"
								value="Xoá" update=":messages,:menuformid"
								action="#{kPICompBean.delete()}">
								<p:confirm header="Xác nhận"
									message="Bạn có chắc muốn xoá không?" icon="ui-icon-alert" />
							</p:commandButton>
							<p:tooltip for="tailaict" value="Tải lại danh sách" />
							<p:commandButton icon="fa fa-refresh" id="tailaict"
								process="@this" value="Tải lại" update=":menuformid"
								action="#{kPICompBean.searchItem()}">
							</p:commandButton>
						</h:panelGrid>
						<div style="clear: both" />
						<p:dataTable value="#{kPICompBean.kpiComps}"
							styleClass="tableparent" rowKey="#{item.id}"
							selection="#{kPICompBean.kpiCompEdit}" selectionMode="single"
							id="tableid" var="item">
							<p:ajax event="rowSelect" listener="#{kPICompBean.showEdit}"
								update=":menuformid:tv:detail" />
							<p:column headerText="ID" style="width:50px; text-align:center">
								<h:outputText value="#{item.id}" />
							</p:column>
							<p:column headerText="Năm" style="width:100px;text-align:center">
								<h:outputText value="#{item.year}" />
							</p:column>
							<p:column headerText="Tổng điểm"
								style="width:80px;text-align:center">
								<h:outputText value="#{item.result/100}">
									<f:convertNumber pattern="##0%" />
								</h:outputText>
							</p:column>
							<p:column headerText="Ghi chú">
								<h:outputText value="#{item.note}" />
							</p:column>
							<f:facet name="footer">
								<div style="clear: both;" />
							</f:facet>
						</p:dataTable>
					</h:form>
				</p:tab>
				<p:tab title="Chi tiết">
					<h:form id="detail">
						<p:dataTable var="item" styleClass="tableformat1"
							sortBy="#{item.taget.kTagetCate.code}" expandableRowGroups="true"
							scrollable="true" value="#{kPICompBean.kpiCompOfYears}"
							scrollWidth="1160" id="idtableinput">
							<p:headerRow>
								<p:column style="background:darksalmon"
									rendered="#{kPICompBean.list[0]}">
									<h:outputText value="" />
								</p:column>
								<p:column
									style="background:darksalmon;font-size: 1.3em;text-align:center"
									rendered="#{kPICompBean.list[1]}">
									<h:outputText value="#{item.taget.kTagetCate.code}" />
								</p:column>
								<p:column
									style="background:darksalmon;font-size: 1.3em;padding: 5px;"
									rendered="#{kPICompBean.list[2]}">
									<h:outputText value="#{item.taget.kTagetCate.content}" />
								</p:column>
								<p:column
									style="background:darksalmon;font-size: 1.3em;padding: 5px;text-align:center"
									rendered="#{kPICompBean.list[3]}">
									<h:outputText value="#{item.weightedParent}" rows="3">
										<f:convertNumber pattern="##0" />
									</h:outputText>
									<h:outputText value="%" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[4]}">
									<h:outputText value="" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[5]}">
									<h:outputText value="" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[6]}">
									<h:outputText value="" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[7]}">
									<h:outputText value="" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[8]}">
									<h:outputText value="" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[9]}">
									<h:outputText value="" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[10]}">
									<h:outputText value="" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[11]}">
									<h:outputText value="" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[12]}">
									<h:outputText value="" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[13]}">
									<h:outputText value="" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[14]}">
									<h:outputText value="" />
								</p:column>
								<p:column
									style="background:darksalmon;font-size: 1.3em;padding: 5px;text-align:center"
									rendered="#{kPICompBean.list[15]}">
									<h:outputText value="#{item.weightedParentRation}%" rows="3" />
								</p:column>
								<p:column style="background:darksalmon;"
									rendered="#{kPICompBean.list[16]}">
									<h:outputText value="" />
								</p:column>
							</p:headerRow>
							<f:facet name="header">
								<div style="float: left">
									<p:outputLabel value="Năm" style="margin-right:20px" />
									<p:spinner size="5" min="2017" max="2050"
										style="margin-right:15px" value="#{kPICompBean.kpiComp.year}">
										<p:ajax process="@this" update="ttyear" />
									</p:spinner>
									<p:tooltip for="btloadct" id="ttyear"
										value="Đưa mục tiêu công ty năm #{kPICompBean.kpiComp.year} vào nội dung."
										position="top" />
									<p:commandButton type="submit" id="btloadct"
										action="#{kPICompBean.loadTaget()}" process="@this"
										update="idtableinput,:messages" icon="ui-icon-arrowthick-1-s">
										<p:confirm icon="ui-icon-alert"
											message="Đưa mục tiêu năm #{kPICompBean.kpiComp.year} vào nội dung KPI.
									Chương trình sẽ xoá hết KPI trong năm.
									" />
									</p:commandButton>
										<p:commandButton type="submit" value="Thêm KPI"
											process="@this" oncomplete="PF('dialogTaget').show();"
											actionListener="#{kPICompBean.showTaget()}"
											update=":dialogTagetid" icon="ui-icon-document" />
									<p:outputLabel value="Tổng điểm:" style="margin-left:20px" />
									<p:outputLabel value="#{kPICompBean.kpiComp.result}%"
										style="color:red;font-size:1.3em;margin-left:10px" />

								</div>
								<div style="float: right">
									<p:fieldset style="background:cadetblue;"
										styleClass="noneformatfs">
										<p:tooltip for="caculid"
											value="Tính toán các giá trị trong lưới chi tiết theo công thức"
											position="top" />
										<p:commandButton type="submit" value="Tính kết quả"
											id="caculid" process="@form" style="background:#fbe4c6"
											actionListener="#{kPICompBean.caculatorResult()}"
											update=":menuformid:tv:detail,:messages"
											icon="ui-icon-calculator" />
										<p:tooltip for="saveorupdateid"
											value="Lưu hoặc cập nhật giá trị trong lưới chi tiết"
											position="top" />
										<p:commandButton type="submit" value="Lưu/cập nhật"
											id="saveorupdateid" process="@form"
											action="#{kPICompBean.createOrUpdate()}"
											update=":messages,:menuformid:tv:detail" icon="ui-icon-disk" />
										<p:tooltip for="btnew"
											value="Làm trống dữ liệu trên form để tạo phiếu mới"
											position="top" />
										<p:commandButton type="submit" value="Tạo mới" process="@this"
											id="btnew" action="#{kPICompBean.reset()}"
											update=":menuformid:tv:detail" icon="ui-icon-document" />
										<p:tooltip for="remote"
											value="In hoặc xuất báo cáo ra file .pdf " position="top" />
										<p:commandButton id="remote" icon="ui-icon-print" value="In"
											styleClass="bthei40" process="@form"
											actionListener="#{kPICompBean.process('menuformid:tv:detail:idtableinput:report')}" />
										<p:commandButton id="report" style="display:none"
											process="@this" update=":messages,:mainForm"
											action="#{kPICompBean.printOnly()}" />
										<p:tooltip for="toggler"
											value="Chọn vào các cột để hiển thị trong lưới chi tiết"
											position="top" />
										<p:commandButton id="toggler" type="button" value="Cột"
											icon="ui-icon-calculator" />
										<p:columnToggler datasource="idtableinput" trigger="toggler">
											<p:ajax event="toggle" listener="#{kPICompBean.onToggle}" />
										</p:columnToggler>
									</p:fieldset>
								</div>
								<div style="clear: both;" />
							</f:facet>
							<f:facet name="footer">

								<div style="float: right; width: 50%">
									<p:inputTextarea placeholder="Ghi chú.."
										value="#{kPICompBean.kpiComp.note}" rows="2" />
								</div>
								<div style="clear: both;" />

							</f:facet>
							<p:column headerText="..." style="width:10px; text-align:center"
								visible="#{kPICompBean.list[0]}">
								<p:commandButton id="btxoa" icon="ui-icon-closethick"
									style="margin-left: -9px;background: none;border: none; box-shadow: none;"
									update="idtableinput" styleClass="btnoneformat" process="@this"
									actionListener="#{kPICompBean.removeDetail(item)}" />
							</p:column>
							<p:column headerText="STT" visible="#{kPICompBean.list[1]}"
								style="text-align:center" width="20">
								<p:outputLabel value="#{item.no}" rows="2"
									style="text-align:center" />
							</p:column>
							<p:column headerText="Mục tiêu" width="280"
								visible="#{kPICompBean.list[2]}">
								<p:outputLabel value="#{item.contentAppreciate}" rows="3"
									autoResize="false" />
							</p:column>
							<p:column headerText="Trọng số(%)" width="32"
								style="text-align:center" visible="#{kPICompBean.list[3]}">
								<p:outputLabel value="#{item.weighted}%" rows="3"
									style="text-align:center">
									<f:convertNumber pattern="##0" />
								</p:outputLabel>
							</p:column>
							<p:column headerText="Tiêu chí đánh giá" width="120"
								visible="#{kPICompBean.list[4]}">
								<p:inputTextarea value="#{item.criteriaCheck}" rows="2" />
							</p:column>
							<p:column headerText="Cách tính" width="160"
								visible="#{kPICompBean.list[5]}">
								<p:outputLabel value="#{item.computation}" rows="2" />
								<p:commandLink style="float:right" process="@this"
									actionListener="#{kPICompBean.showListFormula(item)}"
									update=":dialogformula,:messages">
									<h:outputText value="&#8801;" />
								</p:commandLink>
							</p:column>
							<p:column headerText="Thời điểm ghi nhận kết quả" width="100"
								visible="#{kPICompBean.list[6]}">
								<p:inputTextarea value="#{item.timeTakeResult}" rows="2" />
							</p:column>
							<p:column headerText="A" visible="#{kPICompBean.list[7]}"
								width="35">
								<p:inputTextarea value="#{item.paramA}" rows="2"
									style="text-align:center" />
							</p:column>
							<p:column headerText="B" visible="#{kPICompBean.list[8]}"
								width="35">
								<p:inputTextarea value="#{item.paramB}" rows="2"
									style="text-align:center" />
							</p:column>
							<p:column headerText="C" visible="#{kPICompBean.list[9]}"
								width="35">
								<p:inputTextarea value="#{item.paramC}" rows="2"
									style="text-align:center" />
							</p:column>
							<p:column headerText="Nguồn dữ liệu chứng minh" width="100"
								visible="#{kPICompBean.list[10]}">
								<p:inputTextarea value="#{item.sourceVerify}" rows="2" />
							</p:column>
							<p:column headerText="Đơn vị tính"
								visible="#{kPICompBean.list[11]}" width="40">
								<p:inputTextarea value="#{item.unit}" rows="2"
									style="text-align:center" />
							</p:column>
							<p:column headerText="Kế hoạch(KH)"
								visible="#{kPICompBean.list[12]}" width="55">
								<p:inputTextarea value="#{item.planKPI}" rows="2"
									style="text-align:center" />
							</p:column>
							<p:column headerText="Thực hiện(TH)"
								visible="#{kPICompBean.list[13]}" width="55">
								<p:inputTextarea value="#{item.performKPI}" rows="2"
									style="text-align:center" />
							</p:column>
							<p:column headerText="Tỉ lệ hoàn thành"
								visible="#{kPICompBean.list[14]}" width="40"
								style="text-align:center">
								<p:outputLabel value="#{item.ratioComplete/100}" rows="2"
									style="text-align:center">
									<f:convertNumber pattern="##0%" />
								</p:outputLabel>
							</p:column>
							<p:column headerText="Tỉ lệ nhân trọng số "
								visible="#{kPICompBean.list[15]}" width="50"
								style="text-align:center">
								<p:outputLabel value="#{item.ratioCompleteIsWeighted/100}"
									rows="2" style="text-align:center">
									<f:convertNumber pattern="##0%" />
								</p:outputLabel>
							</p:column>
							<p:column headerText="Ghi chú" visible="#{kPICompBean.list[16]}"
								width="125">
								<p:inputTextarea value="#{item.note}" rows="2"
									style="text-align:center" />
							</p:column>
						</p:dataTable>
						<br />
						<h:outputText value="Chú ý*:" style="font-weight: bold;" />
						<br />
						<h:outputText
							value="- Nhập giá trị các tham số vào các cột (A,B,C,..) theo công thức để tính." />
						<br />
						<h:outputText
							value="- Dữ liệu ngày nhập theo định dạng dd/MM/yyyy (ví dụ: 01/05/2018, 31/12/2018)." />
						<br />
						<h:outputText
							value="- Dữ liệu tỉ lệ % thì nhập phần số bỏ dấu % (ví dụ: 70% nhập 70)." />
					</h:form>
				</p:tab>
			</p:tabView>
		</h:form>
		<p:dialog widgetVar="dialogConfirm" resizable="false" width="400"
			closeOnEscape="true" header="Đã có KPI công ty trong năm">
			<h:form>
				<h:outputText value="Bạn có muốn thay thế bằng dữ liệu mới không?" />

				<p:separator />
				<p:commandButton value="OK" oncomplete="PF('dialogConfirm').hide()"
					action="#{kPICompBean.createAndDelete()}"
					update=":messages,:menuformid:tv:detail" />
				<p:commandButton value="Cancel"
					oncomplete="PF('dialogConfirm').hide()" />
			</h:form>
		</p:dialog>
		<p:dialog widgetVar="dialogFormula" resizable="false" width="300"
			closeOnEscape="true" header="Công thức tính">
			<h:form id="dialogformula">
				<p:dataTable value="#{kPICompBean.formulaKPIs}" lazy="true"
					paginatorPosition="bottom" rowsPerPageTemplate="20,40,60"
					paginator="true" rows="40" rowKey="#{item.id}" scrollable="true"
					scrollHeight="370" selection="#{kPICompBean.formulaKPISelect}"
					selectionMode="single" id="tableid" resizableColumns="true"
					var="item">
					<p:column headerText="ID" width="20">
						<h:outputText value="#{item.id}" />
					</p:column>
					<p:column headerText="Mô tả công thức">
						<h:outputText value="#{item.code}" />
					</p:column>
					<f:facet name="footer">
						<div style="clear: both;" />
					</f:facet>
				</p:dataTable>
				<p:separator />
				<p:commandButton value="Đặt công thức"
					oncomplete="PF('dialogFormula').hide()"
					action="#{kPICompBean.updateFormula()}"
					update=":messages,:menuformid:tv:detail" />
			</h:form>
		</p:dialog>
		<p:dialog widgetVar="dialogTaget" resizable="false" width="600"
			closeOnEscape="true" header="Mục tiêu công ty">
			<h:form id="dialogTagetid">
				<p:dataTable value="#{kPICompBean.tagets}" lazy="true"
					sortBy="#{item.kTagetCate.code}" expandableRowGroups="true"
					paginatorPosition="bottom" rowsPerPageTemplate="20,40,60"
					paginator="true" rows="40" rowKey="#{item.id}" scrollable="true"
					style="width:100%" id="tabletagetid" scrollHeight="370"
					widgetVar="datatagettb" resizableColumns="true" var="item">
					<p:headerRow>
						<p:column>
							<h:outputText value="" />
						</p:column>
						<p:column style="font-size: 1.2em;text-align:center">
							<h:outputText value="#{item.kTagetCate.code}" />
						</p:column>
						<p:column style="font-size: 1.2em;padding: 10px;">
							<h:outputText value="#{item.kTagetCate.content}" />
						</p:column>
						<p:column style="font-size: 1.2em;padding: 10px;">
							<h:outputText value="" />
						</p:column>
					</p:headerRow>
					<f:facet name="header">
						<div style="float: right">
							<p:commandButton type="submit" value="Đưa vào KPI"
								update=":menuformid:tv:detail"
								action="#{kPICompBean.getListTaget()}"
								icon="ui-icon-arrowreturnthick-1-s" />
						</div>
						<div style="clear: both;" />
					</f:facet>
					<p:column headerText="..." style="width:20px;">
						<p:selectBooleanCheckbox value="#{item.select}">
							<p:ajax process="@this" />
						</p:selectBooleanCheckbox>
					</p:column>
					<p:column headerText="STT" style="width:20px">
						<h:outputText value="#{item.code}" />
					</p:column>
					<p:column headerText="Nội dung" style="text-align:left">
						<h:outputText value="#{item.content}" />
					</p:column>
					<p:column headerText="Trọng số" width="80" style="text-align:left">
						<h:outputText value="#{item.weighted}%" />
					</p:column>
					<f:facet name="footer">
						<div style="clear: both;" />
					</f:facet>
				</p:dataTable>
			</h:form>
		</p:dialog>
		<ui:include src="/pages/kpis/kpicongty/docpdf.xhtml" />
	</ui:define>
</ui:composition>