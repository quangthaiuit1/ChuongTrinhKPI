<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:h="http://java.sun.com/jsf/html" template="/pages/home.xhtml">
	<ui:define name="content">
	<style>
		.ui-autocomplete-multiple-container {
			height: 150px !important;
			overflow: scroll
		}
	</style>
		<h3 style="margin: 0px">Danh mục vật tư</h3>
		<p:separator />
		<h:form id="menuformid">
			<h:panelGrid columns="2" style="width:100%;" columnClasses="w40, w60">
				<p:panel header="Thông tin" styleClass="panelw100">
					<p:focus for="code" />
					<h:panelGrid id="info">
						<p:outputLabel value="Nhóm  vật tư:" />
						<p:selectOneMenu value="#{materialBean.material.category}"
							converter="abstractConverter" effect="fade" var="t"
							styleClass="seOnMe95" filter="true" filterMatchMode="custom"
							filterFunction="customFilter">
							<f:selectItems value="#{materialBean.materialCategories}"
								var="item" itemLabel="#{item.name}" itemValue="#{item}" />
							<p:column>
								<h:outputText value="#{t.code}" />
							</p:column>
							<p:column>
								<h:outputText value="#{t.name}" />
							</p:column>
						</p:selectOneMenu>
						<p:outputLabel value="Mã vật tư*:" for="code" />
						<p:inputText value="#{materialBean.material.code}" id="code"
							styleClass="upper" />
						<p:outputLabel value="Mã vật tư (Unilever)*:" for="codeU" />
						<p:inputText value="#{materialBean.material.codeU}" id="codeU"
							styleClass="upper" />
						<p:outputLabel value="Tên vật tư*:" />
						<p:inputText value="#{materialBean.material.name}"
							styleClass="upper" />
						<p:outputLabel value="Ðơn vị tính:" />
						<p:inputText value="#{materialBean.material.unit}"
							styleClass="upper" />
						<p:outputLabel value="Vật tư cũ:" />
						<p:selectBooleanCheckbox value="#{materialBean.material.old}" />
						<p:outputLabel value="Đánh giá chất lượng:" />
						<p:selectBooleanCheckbox value="#{materialBean.material.checkKCS}" />
						<p:outputLabel value="Kết chuyển cho:" />
						<p:inputText value="#{materialBean.material.unitforward}" />
						<p:outputLabel value="Ghi chú:" />
						<p:inputTextarea cols="24" rows="4" styleClass="upper"
							value="#{materialBean.material.note}" />
					</h:panelGrid>
					<p:separator />
					<p:commandButton value="Lưu/Cập nhật"
						action="#{materialBean.createOrUpdate()}"
						update=":messages,:menuformid" />
					<p:commandButton value="Tạo mới" action="#{materialBean.reset()}"
						update=":menuformid" />
				</p:panel>
				<p:panel header="Danh sách" id="preview">
					<h:panelGrid id="mainGrid" columns="6"
						style="float:left; margin-bottom:5px">
						<p:tooltip for="xoact" value="Xoá form" />
						<p:commandButton icon="ui-icon-trash" id="xoact" process="@this"
							update=":messages,:menuformid" action="#{materialBean.delete()}">
							<p:confirm icon="ui-icon-alert" />
						</p:commandButton>
						<p:commandButton value="Tìm kiếm " id="idorder"
							styleClass="greenbutton" />
						<p:commandButton immediate="true" value="Thông báo vật tư mới"
							actionListener="#{materialBean.processExportXLS('menuformid:excel')}"
							update=":messages" icon="ui-icon-arrowthickstop-1-s" />
						<p:commandButton styleClass="graybutton " id="excel"
							style="display:none" immediate="true"
							onclick="target='_blank';monitorDownload( showStatus , hideStatus)"
							action="#{materialBean.exportXLS()}" />
					</h:panelGrid>

					<p:overlayPanel id="imagePanel" for="idorder" hideEffect="fade"
						widgetVar="panelsearch">
						<h:panelGrid columns="2" cellpadding="5" style="width:400px">
							<p:outputLabel value="Mã vật tư" />
							<p:inputText style="width: 250px;"
								value="#{materialBean.materialSearch.code}" />
							<p:outputLabel value="Mã vật tư (U)" />
							<p:inputText style="width: 250px;"
								value="#{materialBean.materialSearch.codeU}" />
							<p:outputLabel value="Tên vật tư" />
							<p:inputText style="width: 250px;"
								value="#{materialBean.materialSearch.name}" />
						</h:panelGrid>
						<p:separator />
						<p:commandButton value="Tìm" icon="ui-icon-search"
							styleClass="greenbutton" oncomplete="PF('panelsearch').hide()"
							actionListener="#{materialBean.searchItem}" update="tableid" />
					</p:overlayPanel>
					<div style="clear: both" />
					<p:dataTable value="#{materialBean.materials}" lazy="true"
						paginatorPosition="bottom" rowsPerPageTemplate="20,40,60"
						paginator="true" rows="40" rowKey="#{item.id}"
						selection="#{materialBean.materialEdit}" scrollable="true"
						selectionMode="single" scrollWidth="670" id="tableid"
						scrollHeight="370" widgetVar="datatb" resizableColumns="true"
						var="item">
						<p:ajax event="rowSelect" listener="#{materialBean.showEdit()}"
							update=":menuformid" />
						<p:column headerText="..." style="width:20px">
							<p:selectBooleanCheckbox value="#{item.select}">
								<p:ajax process="@this" />
							</p:selectBooleanCheckbox>
						</p:column>
						<p:column headerText="ID" style="width:30px">
							<h:outputText value="#{item.id}" />
						</p:column>
						<p:column headerText="Mã VT" style="width:60px">
							<h:outputText value="#{item.code}" />
						</p:column>
						<p:column headerText="Mã VT(U)" style="width:60px">
							<h:outputText value="#{item.codeU}" />
						</p:column>
						<p:column headerText="Tên vật tư" style="width:250px">
							<h:outputText value="#{item.name}" />
						</p:column>
						<p:column headerText="Đơn vị" style="width:50px">
							<h:outputText value="#{item.unit}" />
						</p:column>
						<p:column headerText="Nhóm vật tư" style="width:150px">
							<h:outputText value="#{item.category.name}" />
						</p:column>
						<p:column headerText="Ghi chú" style="width:200px">
							<h:outputText value="#{item.note}" />
						</p:column>
						<p:column headerText="Cũ" style="width:50px">
							<p:selectBooleanCheckbox value="#{item.old}" disabled="true" />
						</p:column>
						<f:facet name="footer">
							<div style="clear: both;" />
						</f:facet>
					</p:dataTable>
				</p:panel>
			</h:panelGrid>
		</h:form>
	</ui:define>
</ui:composition>