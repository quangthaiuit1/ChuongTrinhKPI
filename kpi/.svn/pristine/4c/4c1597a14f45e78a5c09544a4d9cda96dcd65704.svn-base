<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:pe="http://primefaces.org/ui/extensions"
	xmlns:h="http://java.sun.com/jsf/html" template="/pages/home.xhtml">
	<ui:define name="content">
		<h3 style="margin: 0px">Vị trí chức vụ nhân viên</h3>
		<p:separator />
		<h:form id="menuformid">
			<h:panelGrid columns="2" style="width:100%;" columnClasses="w40, w60"
				styleClass="panelthreeColumn">
				<p:panel header="Thông tin" styleClass="panelw100">
					<h:panelGrid id="info">
						<p:outputLabel value="Mã vị trí-chức vụ*" />
						<p:inputText value="#{positionJobBean.crudPositionJob.code}" />
						<p:outputLabel value="Tên vị trí-chức vụ*" />
						<p:inputText value="#{positionJobBean.crudPositionJob.name}" />
						<p:outputLabel value="Phòng ban*" />
						<p:selectOneMenu
							value="#{positionJobBean.crudPositionJob.departmentParent}"
							style="margin-right:20px" converter="abstractConverter"
							effect="fade" var="t" filter="true" filterMatchMode="custom"
							filterFunction="customFilter">
							<f:selectItem itemValue="#{null}" itemLabel="--PHÒNG BAN--" />
							<f:selectItems value="#{departmentBean.listDepartmentParent}"
								var="item" itemLabel="#{item.name}" itemValue="#{item}" />
							<p:column>
								<h:outputText value="#{t.code}" />
							</p:column>
							<p:column>
								<h:outputText value="#{t.name}" />
							</p:column>
							<p:ajax event="change" process="@this" />
						</p:selectOneMenu>
						<p:outputLabel value="Ghi chú" />
						<p:inputTextarea cols="24" rows="4" styleClass="upper"
							value="#{positionJobBean.crudPositionJob.note}" />
					</h:panelGrid>
					<p:separator />
					<p:commandButton value="Lưu/Cập nhật"
						action="#{positionJobBean.createOrUpdate()}"
						update=":messages,:menuformid" />
					<p:commandButton value="Tạo mới"
						action="#{positionJobBean.reset()}" update=":menuformid" />
					<p:commandButton ajax="false" value="Mô tả công việc" disabled="#{positionJobBean.crudPositionJob.id==null}"
						action="#{positionJobBean.forwardDes()}" onclick="target='_blank'" />
				</p:panel>
				<p:panel header="Danh sách" id="preview">
					<h:panelGrid id="mainGrid" columns="6"
						style="float:left; margin-bottom:5px">
						<p:commandButton value="Tìm kiếm " id="idorder" />
						<p:commandButton icon="ui-icon-trash" id="xoact" process="@this"
							update=":messages,:menuformid" value="Xoá"
							action="#{positionJobBean.delete()}">
							<p:confirm icon="ui-icon-alert" />
						</p:commandButton>
						<p:overlayPanel id="imagePanel" for="idorder" hideEffect="fade" modal="true"
							widgetVar="panelsearch" style="width:350px;">
							<div class="ui-grid-col-12"
								style="padding-left: 0px !important; padding-right: 0px !important;">
								<div class="ui-grid-col-12"
									style="padding-top: 0px !important; padding-bottom: 5px !important;">
									Mã vị trí-chức vụ</div>
								<div class="ui-grid-col-5" style="padding-top: 0px !important;">
									<p:inputText value="#{positionJobBean.searchPositionJob.code}" />
								</div>
								<div class="ui-grid-col-12"
									style="padding-top: 0px !important; padding-bottom: 5px !important;">
									Tên vị trí-chức vụ</div>
								<div class="ui-grid-col-12" style="padding-top: 0px !important;">
									<p:inputText value="#{positionJobBean.searchPositionJob.name}" />
								</div>
								<div class="ui-grid-col-12"
									style="padding-top: 0px !important; padding-bottom: 5px !important;">
									Phòng ban</div>
								<div class="ui-grid-col-12" style="padding-top: 0px !important;">
									<p:selectOneMenu
										value="#{positionJobBean.searchPositionJob.departmentParent}"
										style="margin-right:20px" converter="abstractConverter"
										effect="fade" var="t" filter="true" filterMatchMode="custom"
										filterFunction="customFilter">
										<f:selectItem itemValue="#{null}" itemLabel="Tất cả" />
										<f:selectItems value="#{departmentBean.listDepartmentParent}"
											var="item" itemLabel="#{item.name}" itemValue="#{item}" />
										<p:column>
											<h:outputText value="#{t.code}" />
										</p:column>
										<p:column>
											<h:outputText value="#{t.name}" />
										</p:column>
										<p:ajax event="change" process="@this" />
									</p:selectOneMenu>
								</div>
							</div>
							<p:commandButton value="Tìm" style="float:right;"
								icon="ui-icon-search" oncomplete="PF('panelsearch').hide()"
								actionListener="#{positionJobBean.positionJobSearch()}"
								update="tableid" />
							<div style="clear: both" />
							<p:separator />
						</p:overlayPanel>
					</h:panelGrid>
					<div style="clear: both" />
					<p:dataTable value="#{positionJobBean.listPositionJob}" lazy="true"
						paginatorPosition="bottom" rowsPerPageTemplate="20,40,60"
						paginator="true" rows="40" rowKey="#{item.id}"
						selection="#{positionJobBean.selectPositionJob}" scrollable="true"
						selectionMode="single" scrollWidth="750 " id="tableid"
						scrollHeight="370" widgetVar="datatb" resizableColumns="true"
						var="item">
						<p:ajax event="rowSelect" listener="#{positionJobBean.showEdit()}"
							update=":menuformid" />
						<p:column headerText="ID" style="width:30px">
							<h:outputText value="#{item.id}" />
						</p:column>
						<p:column headerText="Mã" width="80">
							<h:outputText value="#{item.code}" />
						</p:column>
						<p:column headerText="Tên vị trí/chức vụ" width="250">
							<h:outputText value="#{item.name}" />
						</p:column>
						<p:column headerText="Phòng ban" width="250">
							<h:outputText value="#{item.departmentParent.name}" />
						</p:column>
						<p:column headerText="Ghi chú" width="90">
							<h:outputText value="#{item.note}" />
						</p:column>
						<f:facet name="footer">
							<div style="clear: both;" />
						</f:facet>
					</p:dataTable>
				</p:panel>
			</h:panelGrid>
		</h:form>
	</ui:define>
</ui:composition>