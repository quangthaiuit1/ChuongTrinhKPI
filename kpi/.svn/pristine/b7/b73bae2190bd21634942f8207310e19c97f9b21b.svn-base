<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:pe="http://primefaces.org/ui/extensions"
	xmlns:h="http://java.sun.com/jsf/html" template="/pages/home.xhtml">
	<ui:define name="content">
		<h3 style="margin: 0px">Định hướng KPI cá nhân</h3>
		<p:separator />
		<h:form id="menuformid">
			<h:panelGrid columns="2" style="width:100%;" columnClasses="w40, w60"
				styleClass="panelthreeColumn">
				<p:panel header="Thông tin" styleClass="panelw100">
					<h:panelGrid id="info">
						<p:outputLabel value="Phòng ban*" />
						<p:selectOneMenu value="#{orientationPersonBean.department}"
							converter="abstractConverter" effect="fade" var="t"
							styleClass="seOnMe95" filter="true" filterMatchMode="custom"
							filterFunction="customFilter">
							<f:selectItems value="#{orientationPersonBean.departments}"
								var="item" itemLabel="#{item.name}" itemValue="#{item}" />
							<p:column>
								<h:outputText value="#{t.code}" />
							</p:column>
							<p:column>
								<h:outputText value="#{t.name}" />
							</p:column>
							<p:ajax event="change" update="position"
								listener="#{orientationPersonBean.ajaxSelectDep()}" />
						</p:selectOneMenu>
						<p:outputLabel value="Vị trí/Chức vụ công việc (KPI)*" />
						<p:selectOneMenu id="position"
							value="#{orientationPersonBean.orientationPerson.positionJob}"
							converter="abstractConverter" effect="fade" var="t"
							styleClass="seOnMe95" filter="true" filterMatchMode="custom"
							filterFunction="customFilter">
							<f:selectItems value="#{orientationPersonBean.positionJobs}"
								var="item" itemLabel="#{item.name}" itemValue="#{item}" />
							<p:column>
								<h:outputText value="#{t.code}" />
							</p:column>
							<p:column>
								<h:outputText value="#{t.name}" />
							</p:column>
						</p:selectOneMenu>
						<p:outputLabel value="Là tiêu đề:" />
						<p:selectBooleanCheckbox
							value="#{orientationPersonBean.orientationPerson.header}" />
						<p:outputLabel value="Số thứ tự" />
						<p:inputText
							value="#{orientationPersonBean.orientationPerson.code}" />
						<p:outputLabel value="Nội dung*:" />
						<p:inputTextarea rows="3"
							value="#{orientationPersonBean.orientationPerson.content}" />
						<p:outputLabel value="Công thức" />
						<p:commandButton value="Cài đặt công thức tính"
							actionListener="#{orientationPersonBean.showListFormula()}"
							update=":dialogeaccountid" onstart="PF('dialogFormula').show();" />
						<p:outputLabel value="Ghi chú:" />
						<p:inputTextarea cols="24" rows="4" styleClass="upper"
							value="#{orientationPersonBean.orientationPerson.note}" />
					</h:panelGrid>
					<p:separator />
					<p:commandButton value="Lưu/Cập nhật"
						action="#{orientationPersonBean.createOrUpdate()}"
						update=":messages,:menuformid" />
					<p:commandButton value="Tạo mới"
						action="#{orientationPersonBean.reset()}" update=":menuformid" />
				</p:panel>
				<p:panel header="Danh sách" id="preview">
					<h:panelGrid id="mainGrid" columns="6"
						style="float:left; margin-bottom:5px">
						<p:tooltip for="xoact" value="Xoá form" />
						<p:commandButton icon="ui-icon-trash" id="xoact" process="@this"
							update=":messages,:menuformid"
							action="#{orientationPersonBean.delete()}">
							<p:confirm icon="ui-icon-alert" />
						</p:commandButton>
						<p:commandButton value="Tìm kiếm " id="idorder"
							styleClass="greenbutton" />
					</h:panelGrid>
					<p:overlayPanel id="imagePanel" for="idorder" hideEffect="fade"
						modal="true" widgetVar="panelsearch">
						<h:panelGrid columns="2" cellpadding="5" style="width:400px">
							<p:outputLabel value="Phòng ban*" />
							<p:selectOneMenu
								value="#{orientationPersonBean.departmentSearch}"
								converter="abstractConverter" effect="fade" var="t"
								styleClass="seOnMe95" filter="true" filterMatchMode="custom"
								filterFunction="customFilter">
								<f:selectItems
									value="#{orientationPersonBean.departmentSearchs}" var="item"
									itemLabel="#{item.name}" itemValue="#{item}" />
								<p:column>
									<h:outputText value="#{t.code}" />
								</p:column>
								<p:column>
									<h:outputText value="#{t.name}" />
								</p:column>
								<p:ajax event="change" update="positionsearch"
									listener="#{orientationPersonBean.ajaxSelectDepSearch()}" />
							</p:selectOneMenu>
							<p:outputLabel value="Vị trí/Chức vụ công việc (KPI)*" />
							<p:selectOneMenu id="positionsearch"
								value="#{orientationPersonBean.positionJobSearch}"
								converter="abstractConverter" effect="fade" var="t"
								styleClass="seOnMe95" filter="true" filterMatchMode="custom"
								filterFunction="customFilter">
								<f:selectItem value="#{null}" itemLabel="--Vị trí công việc--" />
								<f:selectItems
									value="#{orientationPersonBean.positionJobSearchs}" var="item"
									itemLabel="#{item.name}" itemValue="#{item}" />
								<p:column>
									<h:outputText value="#{t.code}" />
								</p:column>
								<p:column>
									<h:outputText value="#{t.name}" />
								</p:column>
							</p:selectOneMenu>

						</h:panelGrid>
						<p:separator />
						<p:commandButton value="Tìm" icon="ui-icon-search"
							styleClass="greenbutton" oncomplete="PF('panelsearch').hide()"
							actionListener="#{orientationPersonBean.searchItem}"
							update="tableid" />
					</p:overlayPanel>
					<div style="clear: both" />
					<p:dataTable value="#{orientationPersonBean.orientationPersons}"
						paginatorPosition="bottom" sortBy="#{item.positionJob.name}"
						rowsPerPageTemplate="80,120,160" paginator="true" rows="120"
						rowKey="#{item.id}" expandableRowGroups="true" resizableColumns="true"
						selection="#{orientationPersonBean.orientationPersonEdit}"
						scrollable="true" selectionMode="single" scrollWidth="670"
						id="tableid" scrollHeight="370" widgetVar="datatb" var="item">
						<p:ajax event="rowSelect"
							listener="#{orientationPersonBean.showEdit()}"
							update=":menuformid" />
							<p:headerRow>
								<p:column colspan="4" style="background:darksalmon">
									<h:outputText value="#{item.positionJob.name}" />
								</p:column>
							</p:headerRow>
							<p:column headerText="ID" style="width:30px">
								<p:outputLabel value="#{item.id}" />
							</p:column>
							<p:column headerText="STT" style="width:20px">
								<p:outputLabel value="#{item.code}"
									styleClass="#{item.header==true?'textboldoutput':''}" />
							</p:column>
							<p:column headerText="Nội dung" style="text-align:left">
								<p:outputLabel value="#{item.content}"
									styleClass="#{item.header==true?'textboldoutput':''}" />
							</p:column>
							<p:column headerText="Công thức" style="text-align:left">
								<p:outputLabel value="#{item.formulaKPI.code}" />
							</p:column>
							<f:facet name="footer">
								<div style="clear: both;" />
							</f:facet>
						</p:dataTable>
				</p:panel>
			</h:panelGrid>
		</h:form>
		<p:dialog widgetVar="dialogFormula" resizable="false" width="300"
			closeOnEscape="true" header="Công thức tính">
			<h:form id="dialogeaccountid">
				<p:dataTable value="#{orientationPersonBean.formulaKPIs}"
					lazy="true" paginatorPosition="bottom"
					rowsPerPageTemplate="20,40,60" paginator="true" rows="40"
					rowKey="#{item.id}" scrollable="true" scrollHeight="370"
					selection="#{orientationPersonBean.formulaKPISelect}"
					selectionMode="single" id="tableid" resizableColumns="true"
					var="item">
					<p:column headerText="ID" width="20">
						<h:outputText value="#{item.id}" />
					</p:column>
					<p:column headerText="Mô tả công thức">
						<h:outputText value="#{item.code}" />
					</p:column>
					<f:facet name="footer">
						<div style="clear: both;" />
					</f:facet>
				</p:dataTable>
				<p:separator />
				<p:commandButton value="Đặt công thức"
					oncomplete="PF('dialogFormula').hide()"
					action="#{orientationPersonBean.updateFormula()}"
					update=":messages,:menuformid" />
			</h:form>
		</p:dialog>
	</ui:define>
</ui:composition>