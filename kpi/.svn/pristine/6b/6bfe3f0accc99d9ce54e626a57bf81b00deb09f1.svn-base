<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:h="http://java.sun.com/jsf/html" template="/pages/home.xhtml">
	<ui:define name="content">
		<h3 style="margin: 0px">Tuỳ biến report</h3>
		<p:separator />
		<h:form id="menuformid">
			<h:panelGrid columns="1">
				<p:panel header="Thông tin" style="width:100%">
					<p:focus for="code" />
					<h:panelGrid id="info" columns="4" columnClasses="w10,w30,w10,w30"
						cellpadding="10px">
						<p:outputLabel value="Tên report*:" />
						<p:inputText value="#{reportCustomBean.paramReport}" />
						<p:outputLabel value="Mã (qui định)*:" for="code"
							style="margin-left: 30px" />
						<p:inputText value="#{reportCustomBean.paramReportDetail.key}"
							id="code" />
					</h:panelGrid>
					<h:panelGrid cellpadding="10px" style="width:100%">
						<p:outputLabel value="Giá trị*:" />
						<p:inputTextarea cols="24" rows="4"
							value="#{reportCustomBean.paramReportDetail.value}" />
					</h:panelGrid>
					<p:separator />
					<p:commandButton value="Lưu/Cập nhật"
						action="#{reportCustomBean.createOrUpdate()}"
						update=":messages,:menuformid" />
					<p:commandButton value="Tạo mới"
						action="#{reportCustomBean.reset()}" update=":menuformid" />
				</p:panel>
				<p:panel header="Danh sách" id="preview">
					<h:panelGrid id="mainGrid" columns="6">
						<p:tooltip for="xoact" value="Xoá form" />
						<p:commandButton icon="ui-icon-trash" id="xoact" process="@this"
							update=":messages,:menuformid"
							action="#{reportCustomBean.delete()}">
							<p:confirm icon="ui-icon-alert" />
						</p:commandButton>
						<p:commandButton value="Tìm kiếm " id="idorder"
							styleClass="greenbutton" />
					</h:panelGrid>
					<p:overlayPanel id="imagePanel" for="idorder" hideEffect="fade"
						widgetVar="panelsearch">
						<h:panelGrid columns="2" cellpadding="5" style="width:200px">
							<p:inputText style="width: 350px;" styleClass="upper"
								placeholder="Tìm kiếm theo tên report"
								value="#{reportCustomBean.searchText}" />
						</h:panelGrid>
						<p:separator />
						<p:commandButton value="Tìm" icon="ui-icon-search"
							styleClass="greenbutton" oncomplete="PF('panelsearch').hide()"
							actionListener="#{reportCustomBean.searchItem}" update="tableid" />
					</p:overlayPanel>
					<div style="clear: both" />
					<p:dataTable value="#{reportCustomBean.paramReportDetails}"
						lazy="true" paginatorPosition="bottom"
						rowsPerPageTemplate="20,40,60" paginator="true" rows="40"
						rowKey="#{item.id}"
						selection="#{reportCustomBean.paramReportDetailEdit}"
						scrollable="true" selectionMode="single" id="tableid"
						scrollHeight="300" widgetVar="datatb" resizableColumns="true"
						var="item">
						<p:ajax event="rowSelect"
							listener="#{reportCustomBean.showEdit()}" update=":menuformid" />
						<p:column headerText="ID" style="width:30px">
							<h:outputText value="#{item.id}" />
						</p:column>
						<p:column headerText="Tên report" style="width:100px">
							<h:outputText value="#{item.paramReport.namReport}" />
						</p:column>
						<p:column headerText="Mã (qui định)" style="width:80px">
							<h:outputText value="#{item.key}" />
						</p:column>
						<p:column headerText="Giá trị" style="width:300px">
							<h:outputText value="#{item.value}" />
						</p:column>
						<f:facet name="footer">
							<div style="clear: both;" />
						</f:facet>
					</p:dataTable>
				</p:panel>
			</h:panelGrid>
		</h:form>
	</ui:define>
</ui:composition>