package trong.lixco.com.ejb.service;

import java.util.List;

import javax.annotation.Resource;
import javax.ejb.SessionContext;
import javax.ejb.Stateless;
import javax.ejb.TransactionManagement;
import javax.ejb.TransactionManagementType;
import javax.inject.Inject;
import javax.persistence.EntityManager;
import javax.persistence.TypedQuery;
import javax.persistence.criteria.CriteriaBuilder;
import javax.persistence.criteria.CriteriaQuery;
import javax.persistence.criteria.Root;

import trong.lixco.com.jpa.entity.City;
import trong.lixco.com.jpa.entity.Distrist;

@Stateless
@TransactionManagement(TransactionManagementType.CONTAINER)
public class DistristService extends AbstractService<Distrist> {
@Inject
	private EntityManager em;
	@Resource
	private SessionContext ct;
	
	@Override
	protected EntityManager getEntityManager() {
		return em;
	}
	
	@Override
	protected SessionContext getUt() {
		return ct;
	}
	
	@Override
	protected Class<Distrist> getEntityClass() {
		return Distrist.class;
	}
	public List<Distrist> findByCity(City city) {
		CriteriaBuilder cb = em.getCriteriaBuilder();
		CriteriaQuery<Distrist> cq = cb.createQuery(Distrist.class);
		Root<Distrist> root = cq.from(Distrist.class);
		cq.select(root).where(cb.equal(root.get("city"), city));
		TypedQuery<Distrist> query = em.createQuery(cq);
		List<Distrist> results = query.getResultList();
		return results;
	}
	public Distrist findByCodeBH(String codeBH) {
		CriteriaBuilder cb = em.getCriteriaBuilder();
		CriteriaQuery<Distrist> cq = cb.createQuery(Distrist.class);
		Root<Distrist> root = cq.from(Distrist.class);
		cq.select(root).where(cb.equal(root.get("codeBH"), codeBH));
		TypedQuery<Distrist> query = em.createQuery(cq);
		List<Distrist> results = query.getResultList();
		if (results.size() != 0) {
			return results.get(0);
		} else {
			return null;
		}
	}
}
